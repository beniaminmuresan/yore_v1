@model yore_v1.Models.User

@{
    ViewBag.Title = "Login";
}

    <div class="row">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-4">

            @using (Html.BeginForm("Login", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="menu" style="width: 313px;">
                    <div class="login">
                        <center><img src="https://i.ibb.co/GMLNc55/yore-logo.png" border="0" width="50px"></center>

                        <h1>Sign In</h1>
                        <div class="input name">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @placeholder = "Username", @class = "text", @type = "text", @tabindex = "1" } })
                            <div class="bar"></div>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="input name">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = "Password", @class = "text", @type = "password", @tabindex = "2" } })
                            <div class="bar"></div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </div>
                        <button type="submit" value="Submit" tabindex="3" class="submit" disabled="disabled" title="Log In">Sign In</button>
                        <center><a href="@Url.Action("Register", "User")">Don't have an account yet? Sign up now!</a></center>
                        <label class="label-danger">@ViewBag.LoginErrorMessage</label>
                    </div>
                </div>

                <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />
            }
        </div>
        <div class="col-sm-4">
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
